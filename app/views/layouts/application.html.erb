<!DOCTYPE html>
<html>
  <head>
    <title>Bikeshop Bottrop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Oswald|Roboto+Slab|Press+Start+2P" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>

  <!-- welcome message for sign in or alerts -->
  <div class="container anchor">
    <% if notice %>
      <p class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= notice %>
      </p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= alert %>
      </p>
    <% end %>
  </div>
  <!-- end message or alerts -->

  <!-- start navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
          data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
           </button>
           <div class="projectName navbar-brand">
            <a href="/static_pages/index">Bikeshop Bottrop</a>
           </div><!--end projectName -->   
        </div><!--end navbar-header -->
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Home', "/static_pages/index" %></li>
            <li><%= link_to 'Products', products_url %></li>
            <li><%= link_to 'About', "/static_pages/about" %></li>
            <li><%= link_to 'Contact', "/static_pages/contact" %></li>
            <li class="log_button">
              <% if user_signed_in? %>
                <button type="button" class="btn btn-default navbar-btn"><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></button>
                <% else %>
                <button type="button" class="btn btn-default navbar-btn"><%= link_to('Login', new_user_session_path) %></button>
              <% end %>
            </li>
          </ul>
          <%= form_tag("/products", class: "navbar-form", method: "get") do %>
          <div class="form-group">
          <%= text_field_tag(:q, nil, placeholder: 'Search', class: 'form-control') %>
          </div>
          <%= submit_tag("Search", class: "btn btn-default") %>
          <% end %>  
        </div><!--end navbar collapse-->
      </div><!--end navbar container-->
    </nav><!-- end navbar -->
    <div>
      <%= yield %>
    </div>

    <footer class="container footer">
      <div>
  		  <p class="text-muted">&copy; 2016 Bike Bottrop</p>
      </div>
    </footer>
  </body>
</html>
