<div class="container">
  <form class="form-sign">
    <h2 class="form-signup-heading">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="email-field">
        <%= f.label :email, class: "sr-only" %><br />
        <%= f.email_field :email, class: "form-control", placeholder: "Email address" %><br />
      </div>

      <div class="password-field">
        <%= f.label :password, class: "sr-only" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", id: "inputPassword-1", class: "form-control", placeholder: "Password" %>
      </div>

      <div class="password-field">
        <%= f.label :password_confirmation, class: "sr-only" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", id: "inputPassword", class: "form-control form-border", placeholder: "Password confirmation" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="form-sign">
      <%= render "devise/shared/links" %>
    </div>
  </form>
</div>