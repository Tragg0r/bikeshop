<div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="email-field">
            <%= f.label :email, class: "sr-only" %><br />
            <%= f.email_field :email, class: "form-control", placeholder: "Email address" %><br />
          </div>

          <div class="password-field">
            <%= f.label :password, class: "sr-only" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", id: "inputPassword-1", class: "form-control", placeholder: "Password" %>
          </div>

          <div class="password-field">
            <%= f.label :password_confirmation, class: "sr-only" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", id: "inputPassword", 
            class: "form-control form-border", placeholder: "Password confirmation" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" , class:"btn btn-lg btn-primary btn-block" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div> <!-- /col -->
      <div class="col-md-4">
      </div>
    </div> <!-- /row -->
</div> <!-- /container -->