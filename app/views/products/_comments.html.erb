<div class="product-reviews">
    <% @comments.each do |comment| %>
        <div>
            <hr class="hr-edit">
            <p class="comment-margin"><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
        </div>
        <div class="rated comment-margin" data-score="<%= comment.rating %>">    
        </div>
        <div>
        	<p class="comment-margin"><%= comment.body %></p>
        </div>
        
    <% end %>
</div>