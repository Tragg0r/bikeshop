<% if signed_in? %>
  <h4 class="comment-rating">Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p class="comment-rating">
      <%= f.label :body, "Comments:" %><br>
      <%= f.text_area :body, class: "form-control", style: "resize: none", rows: "6", placeholder: "Enter your comment" %>
    </p>
    <p>
      <div class="rating comment-rating"></div>
    </p>  
    <p class="comment-rating">
      <%= f.submit "Submit", class: "btn btn-default" %>
    </p>
  <% end %>
<% end %>