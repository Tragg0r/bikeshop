  <div class="thumbnail product-height">
    <%= image_tag(product.image_url, class: "img-responsive") %>
    <div class="caption">
      <h3><%= product.name %> <div class="rated" data-score="<%= product.average_rating %>"></div></h3>
      <p><b>description:</b> <%= product.description %></p>
      <p><b>color:</b> <%= product.color %></p>
      <p><b>price:</b> â‚¬ <%= product.price %></p>
      <p><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div><!-- end caption -->
  </div><!-- end thumbnail -->
</div><!-- /col -->