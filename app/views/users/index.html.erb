<div class="container">

  <h1>Users</h1>

  <table>
    <thead>
      <tr>
        <th>First name</th>
        <th colspan="1"></th>
        <th>Last name</th>
        <th colspan="1"></th>
        <th>Show user</th>
        <th colspan="1"></th>
        <th>Edit<br /> user information</th>
        <th colspan="1"></th>
        <th>Destroy account</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td colspan="1"></td>
          <td><%= user.last_name %></td>
          <td colspan="1"></td>
          <td><%= link_to 'Show', user %></td>
          <td colspan="1"></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td colspan="1"></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path %>
</div>
